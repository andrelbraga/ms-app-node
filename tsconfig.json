{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "ignoreDefinitionFiles": false,
        "configFile": "./tslint.json"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "src/typings/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "src/presentation/helpers/jest.ts",
    "src/presentation/helpers/testHelpers.ts"
  ]
}
